<p id="notice"><%= notice %></p>

<h1>Rumes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Listeners</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rumes.each do |rume| %>
      <tr>
        <td><%= link_to rume.name, rume_path(rume) %></td>
        <td><%= rume.description %></td>
        <td><%= rume.listeners.count %></td>
        <td> <% if current_user.id == rume.user_id %>
                <%=  link_to 'Edit', edit_rume_path(rume) %>
             <% end %>
        </td>
        <td> <% if current_user.id == rume.user_id %>
                  <%= link_to 'Destroy', rume, method: :delete, data: { confirm: 'Are you sure?' } %>
             <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rume', new_rume_path %>
