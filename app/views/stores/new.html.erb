<h1>Stores#new</h1>
<p>Find me in app/views/stores/new.html.erb</p>

<%= form_tag user_makestore_path do %>
    <%= label_tag :Name %>
    <%= text_field_tag :name, nil, placeholder: "Store Name" %>
    
    <br>
    
    <%= label_tag :Email %>
    <%= text_field_tag :email, nil, placeholder: "Email Address" %>

    <br>

    <%= label_tag :Phone_Number %>
    <%= text_field_tag :phone_number, nil, placeholder: "Phone Number" %>

    <br>
    
    <%= label_tag :Location %>
    <%= text_field_tag :location, nil, placeholder: "Location" %>
    
    <br>
    
    <%= label_tag :Products %>
    <%= text_field_tag :products, nil, placeholder: "Store Products" %>
    
    <br>
    
    <%= label_tag :description %>
    <%= text_area_tag :description, nil, placeholder: "Description" %>
    
    <br>
    
    <% label_tag :user_id %>
    <% hidden_field_tag :user_id, value: current_user.id %>
    
    <br>
    
    <% label_tag :store_id %>
    <% hidden_field_tag :store_id, value: @store.id %>
    
    <br>
    
    <%= submit_tag "Make Your Store" %>
    
<% end %>