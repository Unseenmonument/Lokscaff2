<p id="notice"><%= notice %></p>

<h1>Stores</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Listeners</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= link_to store.name, store_path(store) %></td>
        <td><%= store.description %></td>
        <td><%= store.products %></td>
        <td> <% if current_user.id == store.user_id %>
                <%=  link_to 'Edit', edit_user_store_path(current_user.id, store) %>
             <% end %>
        </td>
        <td> <% if current_user.id == store.user_id %>
                  <%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %>
             <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Store', new_user_store_path(current_user.id, @store) %>
