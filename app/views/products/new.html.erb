<h1>Products#new</h1>

<%= form_with url: user_store_newprod_path do |f| %>

    <%= f.label :name, "Product Name" %>
    <%= f.text_field :name %>
    
    <br>

    <%= f.label :quantity %>
    <%= f.number_field :quantity %>
    
    <br>
    
    <%= f.label :price %>
    <%= f.text_field :price %>
    

    <br>
    
    <%= f.label :description %>
    <%= f.text_area :description %>
    
    <br>

    <% f.label :user_id %>
    <% f.hidden_field :user_id, value: current_user.id %>
    
    <br>
    
    <% f.label :store_id %>
    <% f.hidden_field :store_id, value: @store.id %>
    
    <br>
    
    <%= f.submit %>
    
<% end %>
