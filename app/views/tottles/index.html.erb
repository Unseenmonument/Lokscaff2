<p id="notice"><%= notice %></p>

<h1>Tottles</h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tottles.each do |tottle| %>
      <tr>
        <td><%= tottle.message %></td>
        <td><%= tottle.user_id %></td>
        <td><%= link_to 'Show', tottle %></td>
        <td><%= link_to 'Edit', edit_tottle_path(tottle) %></td>
        <td><%= link_to 'Destroy', tottle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

