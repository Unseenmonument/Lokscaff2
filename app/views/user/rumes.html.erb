<h1>Your Rumes</h1>

<table>
  <thead>
    <tr>
    	<th>Name</th>
    	<th>Rume</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rumes.each do |rume| %>

      <%  if rume.user_id != current_user.id
            print rume
          else
            print nil %>

        <tr>
        	<td><%= rume.user.name %></td>
          <td><%= rume.description %></td>
          <td><%= link_to 'Edit', edit_user_rume_path(current_user.id, rume.id) %></td>
          <td><%= link_to 'Destroy', rume, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>

  <tbody>
    <% @user.each do |user| %>
        <tr>
          <td><%= user.listen_to.name %></td>
          <td><%= rume.description %></td>
          <td><%= link_to 'Edit', edit_user_rume_path(current_user.id, rume.id) %></td>
          <td><%= link_to 'Destroy', rume, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>




</table>