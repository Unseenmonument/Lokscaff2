<h1>Your Comments</h1>

<table>
  <thead>
    <tr>
    	<th>Name</th>
    	<th>Rume</th>
      <th>Convo</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>

      <%  if comment.user_id != current_user.id
            print comment
          else
            print nil %>

        <tr>
        	<td><%= comment.user.name %></td>
        	<td><%= comment.rume.name %></td>
          <td><%= comment.text %></td>
          <td><%= link_to 'Edit', edit_user_comment_path(current_user.id, comment.id) %></td>
          <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>